# 音频编辑器部署配置文件
# 复制此文件为 deploy.config 并修改相应配置

# 服务器配置
SERVER_IP=192.168.1.100
SSH_USER=root
SSH_PASSWORD=your_password_here
SSH_PORT=22

# 部署配置
DEPLOY_PATH=/var/www/audioediter
DEPLOY_ENV=production
DEPLOY_MODULES=all  # frontend, backend, all

# 服务配置
BACKUP_EXISTING=true
RESTART_SERVICES=true

# 前端配置
FRONTEND_PORT=80
FRONTEND_DOMAIN=your-domain.com

# 后端配置
BACKEND_PORT=3000
BACKEND_HOST=localhost

# 数据库配置（如果需要）
DB_HOST=localhost
DB_PORT=3306
DB_NAME=audioediter
DB_USER=audioediter_user
DB_PASSWORD=your_db_password

# 其他配置
LOG_LEVEL=info
MAX_UPLOAD_SIZE=100mb
